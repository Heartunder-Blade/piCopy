<!--pages/keeper/shopRegist/shopRegist.wxml-->
<view>
    <view class="inputView">
        <input  maxlength="30" value="{{address}}" bindinput="addressInput"/>
        <view wx:for="{{suggestions}}" wx:for-item="suggestion">
            <view bindtap="useSuggestion" data-latitude="{{suggestion.location.lat}}"
             data-longitude="{{suggestion.location.lng}}" data-address="{{suggestion.address}}" data-title="{{suggestion.title}}">
            <text>{{suggestion.title}}</text>
            </view>
        </view>
    </view>
        <map longitude="{{longitude}}" latitude="{{latitude}}" markers="{{marker}}" class="map"></map>
        <button bindtap="confirm">чбошод</button>
</view>